<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Grid Settings">

        <EditTextPreference
            android:dialogTitle="Enter columnCount"
            android:key="column"
            android:summary="Enter column"
            android:title="Column Count"
            android:inputType="number"/>

        <EditTextPreference
            android:dialogTitle="Enter spacing"
            android:key="spacing"
            android:summary="Enter spacing"
            android:title="Spacing"
            android:inputType="number"/>

        <EditTextPreference
            android:dialogTitle="Enter Animation Speed"
            android:key="speed"
            android:summary="Enter column"
            android:title="Animation duration (high number means slow speed)"
            android:inputType="number"/>

    </PreferenceCategory>

</PreferenceScreen>
